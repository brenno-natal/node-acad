<header>
    <h1>My account</h1>

    <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="darkSwitch" onclick="changeIcon()">
        <label class="custom-control-label" for="darkSwitch"><i class="fa " id="iconMode"
                aria-hidden="true"></i></label>
    </div>
</header>

<hr>

<div class="results">
    <div class="card text-white bg-success">
        <div class="card-header">Total income</div>
        <div class="card-body">
            <h5 class="card-title">$ 3000</h5>
        </div>
    </div>
    <div class="card text-white bg-danger">
        <div class="card-header">Total outcome</div>
        <div class="card-body">
            <h5 class="card-title">$ 500</h5>
        </div>
    </div>
    <div class="card text-white bg-secondary">
        <div class="card-header">Total balance</div>
        <div class="card-body">
            <h5 class="card-title">$ 12000</h5>
        </div>
    </div>
</div>

<hr>
<div class="col-12">

    <div style="display: flex; flex-direction: row; align-items: center;">
        <h3>Transactions</h3>
        <button type="button" class="btn rounded-circle"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>

    </div>

    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Value</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody id="table">
                <tr>
                    <td>1</td>
                    <td>Name test</td>
                    <td>Outcome</td>
                    <td class="text-danger"><i class="fa fa-minus" aria-hidden="true"></i> 550.00</td>
                    <td>dd/mm/yyyy</td>

                </tr>
                <tr>
                    <td>2</td>
                    <td>Name test</td>
                    <td>Income</td>
                    <td class="text-success"><i class="fa fa-plus" aria-hidden="true"></i> 550.00</td>
                    <td>dd/mm/yyyy</td>
                </tr>

            </tbody>

        </table>
    </div>


</div>

<%- contentFor('header-end') %>

<title> Account </title>
<link rel="stylesheet" href="/css/home-page.css">

<%- contentFor('scripts')  %> 
<script src="/js/home-page.js"></script>
